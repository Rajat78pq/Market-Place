generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(uuid())
  name           String?
  email          String           @unique
  password       String?
  createdAt      DateTime         @default(now())
  oauthId        String?          @unique
  deliveryPoints DeliveryPoint[]  @relation("UserDeliveryPoint")
  shops          Shop[]           @relation("UserShops")
}

model DeliveryPoint {
  id        String      @id @default(uuid())
  latitude  Float
  longitude Float
  address   String
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation("UserDeliveryPoint",fields: [userId], references: [id])
}

model Shop {
  id        String       @id @default(uuid())
  name      String
  ownerName String
  email     String    @unique
  password  String
  category  String
  radius    Float     @default(5000)
  createdAt DateTime  @default(now())
  location  Location? @relation("ShopLocation")
  products  Product[] 
  ownerId   String     // Foreign key to reference the User
  owner     User       @relation("UserShops", fields: [ownerId], references: [id])
}

model Product {
  id        String      @id @default(uuid())
  product_name      String
  description String
  category  String
  brand     String
  price     Decimal
  discount_price Decimal
  stock     Int
  image     String[]
  color     String
  size      String
  slug      String
  tags      String[]
  createdAt DateTime @default(now())
  shopId    String
  shop      Shop     @relation(fields: [shopId], references: [id])
}

model Location {
  id        String   @id @default(uuid())
  latitude  Float
  longitude Float
  shop_id   String?  @unique
  shop      Shop? @relation("ShopLocation",fields: [shop_id], references: [id])
}
